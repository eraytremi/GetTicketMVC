@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using GetTicketMVC.Models.ViewModel
@model SearchViewModel

<script src="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.js"></script>
<link href="https://cdn.rawgit.com/mdehoog/Semantic-UI/6e6d051d47b598ebab05857545f242caf2b4b48c/dist/semantic.min.css" rel="stylesheet" type="text/css" />
<link href="~/page/Home/Index/index.css" rel="stylesheet" />
<script src="~/page/Home/Index/index.js"></script>
<div class="div-page-area">
    <div class="search-background">
        <div class="search-area">
            <form action="/Home/ControlSearch" method="post">
                <div>
                    <label class="form-label">Kalkış Noktası</label>
                    <select id="txtDeparturePoint" name="DeparturePoint">
                        <option value="-1">Seçiniz...</option>
                        @foreach (var item in Model.CityModel)
                        {
                            <option>@item.CityName</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="form-label">Varış Noktası</label>
                    <select id="txtDestinationPoint" name="DestinationPoint">
                        <option value="-1">Seçiniz...</option>
                        @foreach (var item in Model.CityModel)
                        {
                            <option>@item.CityName</option>
                        }
                    </select>
                    <div>
                        <label class="form-label">Yolculuk Tarihi</label>
                        <input name="DepartureTime" type="date" id="search-date" />
                    </div>
                    <div>
                        <button type="submit" href="/Home/ListOfJourneys" id="btnSave" class="btn">Ara</button>
                    </div>
                    <div><p>@ViewBag.NotFound </p></div>
                </div>
            </form>
            
        </div>
    </div>
</div>
